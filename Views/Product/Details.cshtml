@model Bdproductos.Models.Product

<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="detallesProductoModalLabel">Detalles del Producto</h5>
             <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" onclick="window.location.href='/Product'"></button>
        </div>
        <div class="modal-body">

            <div class="row">
                <div class="col-md-8">
                    <p><strong>Id:</strong>@Model.Id</p>
                    <p><strong>Name:</strong>@Model.Name</p>
                    <p><strong>Description:</strong>@Model.Description</p>
                    <p><strong>Price:</strong>@Model.Price</p>
                    <p><strong>Amount:</strong>@Model.Amount</p>
                    <p><strong>ExpirationDate:</strong>@Model.ExpirationDate</p>
                    <p><strong>UserId:</strong>@Model.UserId</p>
                </div>
            </div>
        </div>
    </div>
</div>
