<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
 
 <div class="containet mt-5">
    <h1>Listado de usuarios</h1>
    <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombres</th>
                    <th>Apellidos</th>
                    <th>Correo</th>
                    <th>Telefono</th>
                    <th>Direccion</th>
                    <th>Acciones</th>

                </tr>
            </thead>

            @foreach (var user in Model){
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Names</td>
                    <td>@user.LastNames</td>
                    <td>@user.Email</td>
                    <td>@user.Phone</td>
                    <td>@user.Address</td>
                    
                    <td>
                        <a href="@Url.Action("Details", "User", new { id = @user.Id })" class="btn btn-primary">Detalles</a>
                        <a asp-action="Edit" asp-route-id="@user.Id">Editar</a>
                        <a asp-action="Delete" asp-route-id="@user.Id">Eliminar</a>
                    </td>
                </tr>
            }
    </table>       

 </div>


</body>
</html>